<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="258dp">

    <ImageView
        android:id="@+id/discoverIv"
        android:layout_width="270dp"
        android:layout_height="214dp"
        android:contentDescription="place cover"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="7dp"
        android:layout_height="6dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/orange_circle"
        android:contentDescription="level"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/discoverNameTv"
        app:layout_constraintEnd_toStartOf="@+id/discoverNameTv"
        app:layout_constraintTop_toTopOf="@+id/discoverNameTv" />

    <TextView
        android:id="@+id/discoverNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-medium"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/discoverIv"
        app:layout_constraintStart_toStartOf="@+id/discoverIv"
        app:layout_constraintTop_toBottomOf="@+id/discoverIv" />

    <TextView
        android:id="@+id/discoverKmTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="km"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/discoverNameTv"
        app:layout_constraintStart_toStartOf="@+id/imageView9"
        app:layout_constraintTop_toBottomOf="@+id/discoverNameTv" />
</androidx.constraintlayout.widget.ConstraintLayout>