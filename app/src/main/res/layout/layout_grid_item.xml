<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_margin="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width='match_parent'
        android:layout_height='wrap_content'
        app:cardCornerRadius='4dp'
        app:cardElevation='2dp'
        app:cardMaxElevation="1dp"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/browseAllIv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src='@drawable/ic_launcher_background' />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='Name'
                android:id="@+id/browseAllName"
                android:layout_below="@id/browseAllIv"
                android:layout_centerHorizontal="true"

                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeMaxTextSize="15sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/browseAllBusy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/browseAllIv"
                android:layout_alignBottom="@+id/browseAllName"
                android:layout_marginStart="-205dp"
                android:layout_marginLeft="-205dp"
                android:layout_marginTop="-94dp"
                android:layout_marginBottom="98dp"
                android:layout_toEndOf="@+id/browseAllName"
                android:layout_toRightOf="@+id/browseAllName"
                android:background="@color/quantum_grey500"
                android:text='Busyness'
                android:textColor="#100"
                android:textSize="15sp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>