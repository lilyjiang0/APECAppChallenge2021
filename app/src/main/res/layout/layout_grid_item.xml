<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_margin="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width='match_parent'
        android:layout_height='wrap_content'
        app:cardCornerRadius='4dp'
        app:cardElevation='2dp'
        app:cardMaxElevation="1dp"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/browseAllIv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src='@drawable/ic_launcher_background' />

            <TextView
                android:id="@+id/browseAllName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/browseAllIv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text='Name'
                android:textColor="#000" />

            <TextView
                android:id="@+id/browseAllBusy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/browseAllName"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"

                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:text='Busyness'
                android:textColor="#100"
                android:textSize="12sp"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/browseAllDot"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignTop="@id/browseAllBusy"
                android:layout_alignBottom="@id/browseAllBusy"
                android:layout_below="@id/browseAllName"
                android:layout_toLeftOf="@+id/browseAllBusy"
                tools:srcCompat="@tools:sample/avatars" />



        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>